# Database
DATABASE_URL=postgresql+asyncpg://erp_user:erp_password@postgres:5432/erp_db

# Redis
REDIS_URL=redis://redis:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Services (internal Docker URLs)
AUTH_SERVICE_URL=http://auth:8001
RBAC_SERVICE_URL=http://rbac:8002
QUOTATION_SERVICE_URL=http://quotation:8003
INVOICE_SERVICE_URL=http://invoice:8004
INVENTORY_SERVICE_URL=http://inventory:8005
HRIS_SERVICE_URL=http://hris:8006
NOTIFICATION_SERVICE_URL=http://notification:8007

# R2 / S3
S3_ENDPOINT=https://your-account.r2.cloudflarestorage.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=erp-files